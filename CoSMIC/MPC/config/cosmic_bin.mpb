// $Id$

project : vc8warnings, boost_base  {
  install = $(COSMIC_ROOT)/bin

  includes += $(COSMIC_ROOT)
  libpaths += $(COSMIC_ROOT)/lib

  macros   += _CRT_SECURE_NO_WARNINGS

  specific (prop:microsoft) {
    DisableSpecificWarnings += 4251
  }

  specific (wix) {
    install_location = bin
  }
}
