// $Id$

project : game {
  dynamicflags += _MIDL_USE_GUIDDEF_ _USRDLL

  libs  += GAME_BE
  after += GAME_BE

  specific (vc6, vc7, vc71, vc8, vc9, vc10, nmake) {
    link_options += /DEF:$(COSMIC_ROOT)/Utils/GAME/etc/Component.def
    midl_notlb = 1
  }

  Header_Files {
    ComponentConfig.h
  }

  Source_Files {
    Component.def
    RawComponent.cpp

    $(GME_ROOT)/SDK/BON/ComponentLib.idl
    $(COSMIC_ROOT)/Utils/GAME/game/be/ComponentDLL.cpp
  }
}
