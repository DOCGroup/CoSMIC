// $Id$

project : register, game {
  dynamicflags += _USRDLL

  libs  += GAME_BE
  after += GAME_BE

  specific (prop:microsoft) {
    midl_flags    += /server none /client none
    midl_includes += . $(GME_ROOT)/Interfaces $(GME_ROOT) $(GAME_ROOT)
    midl_notlb     = 1

    link_options += /DEF:$(GAME_ROOT)/etc/Component.def
  }
}
