// $Id$

project {
  Define_Custom (IDL2PICML) {
    automatic_in     = 0
    automatic_out    = 0
    command          = $(COSMIC_ROOT)/bin/idl_to_picml
    postcommand      = $(GAME_ROOT)/bin/game-automation -p <%input_noext%>.xme \
                        -x MGA.Interpreter.IDLGenerator \
                        --param=<%quote%>OutputPath=<%input_dirname%>/generated<%quote%>
    inputext         = .idl
    output_option    = -x
    source_outputext = .xme

    keyword idl2picml_flags = commandflags
  }
}
