project (CoSMIC_Utils) : xerces, boost_base, cosmic_common {
  sharedname = Utils

  macros    += UTILS_HAS_DLL UTILS_BUILD_DLL

  includes  += $(COSMIC_ROOT)
  lit_libs  += rpcrt4

  specific {
     midl_includes += $(GME_ROOT)/Interfaces
     midl_flags    += /client stub /server none
     midl_notlb     = 1

     compile_flags += /wd4251
  }

  Source_Files {
    Data_Value.cpp
    Data_Value_Parser.cpp
    Data_Value_Visitor.cpp
    Project.cpp
    Utils.cpp
    XercesString.cpp

    $(GME_ROOT)/Interfaces/Mga.idl
    $(GME_ROOT)/Interfaces/Meta.idl
  }

  Header_Files {
    Utils_Export.h
  }

  Template_Files {
    Data_Value_Parser_T.cpp
  }
}
