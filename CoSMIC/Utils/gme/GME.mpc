// $Id$

project (GME) : cosmic_common {
  sharedname = GME

  macros += _WIN32_DCOM
  dynamicflags += GME_BUILD_DLL

  specific {
    compile_flags  += /wd4290 /wd4251
     midl_includes += . $(GME_ROOT)/Interfaces $(GME_ROOT)
     midl_notlb     = 1
     midl_flags    += /server none /client none
  }

  Source_Files {
    $(GME_ROOT)/Interfaces/Meta.idl
    $(GME_ROOT)/Interfaces/Mga.idl

    Attribute.cpp
    Atom.cpp
    Component.cpp
    ComponentEx.cpp
    Exception.cpp
    FCO.cpp
    Folder.cpp
    GME.cpp
    Interpreter.cpp
    Model.cpp
    Object.cpp
    Project.cpp
    Reference.cpp
    RegistryNode.cpp
    Set.cpp
    Territory.cpp

    MetaAttribute.cpp
    MetaBase.cpp
    MetaFolder.cpp
    MetaFCO.cpp
    MetaModel.cpp
    MetaRole.cpp
  }

  Template_Files {
    Collection_T.cpp
    Folder_Model_T.cpp
  }

  Header_Files {
    GME_export.h
    GME_fwd.h
  }
}
