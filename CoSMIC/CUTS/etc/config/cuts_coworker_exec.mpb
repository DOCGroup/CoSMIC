// $Id$

project : cuts_component_dnc {
  // -- set the appropriate flags
  idlflags      += -Wb,export_macro=CUTS_EXEC_Export -Wb,export_include=cuts/CUTS_exec_export.h
  dynamicflags  += CUTS_EXEC_BUILD_DLL CUTS_BUILD_DLL

  // -- include the required libraries
  libs += CUTS CUTS_Utils CUTS_svnt CUTS_stub CUTS_exec

  // -- place all files in a common location
  libpaths += ./lib
  libout    = ./lib
  dllout    = ./bin

  IDL_Files {

  }
}
