// $Id$

project : acelib {
  dynamicflags += CUTS_BUILD_DLL

  specific {
    // By default we turn inlining on to get optimal code performance
    Release::dynamicflags += __CUTS_INLINE__
  }

  specific (vc6, vc7, vc71, vc8, nmake) {
    compile_flags += /wd4290
  }

  libout = $(COSMIC_ROOT)\lib
  dllout = $(COSMIC_ROOT)\bin

  includes += $(CUTS_ROOT)
  libpaths += $(COSMIC_ROOT)\lib
}
