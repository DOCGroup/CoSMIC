// $Id$

project {
  specific (vc6, vc7, vc71, vc8, nmake) {
    compile_flags += /wd4290 /wd4251
  }

  includes += $(CUTS_ROOT) $(CUTS_ROOT)/MDE
  libpaths += $(CUTS_ROOT)/lib
}

//=============================================================================
// feature: noinline
//=============================================================================

feature(noinline) {
  macros -= __CUTS_INLINE__
}

feature(!noinline) {
  macros += __CUTS_INLINE__
}
