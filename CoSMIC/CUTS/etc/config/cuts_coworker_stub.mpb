// $Id$

project : cuts_client_dnc {
  libs += CUTS_stub

  // -- set the appropriate flags
  idlflags += \
    -Wb,stub_export_macro=CUTS_STUB_Export -Wb,stub_export_include=cuts/CUTS_stub_export.h \
    -Wb,skel_export_macro=CUTS_SVNT_Export -Wb,skel_export_include=cuts/CUTS_svnt_export.h

  dynamicflags += CUTS_STUB_BUILD_DLL

  // -- place all files in a common location
  libpaths += ./lib
  libout    = ./lib
  dllout    = ./bin
}
