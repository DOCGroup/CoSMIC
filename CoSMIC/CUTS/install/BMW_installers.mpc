// $Id$

project (BMW_preinstaller) : wix {
  prebuild = aspnet_compiler -v CUTS -p $(CUTS_ROOT)/utils/BMW -f -u -fixednames $(CUTS_ROOT)/bin/BMW
  
  Wxs_Files {
    BMW.wxs
  }
}

project (BMW_installer) : wix { 
  after += BMW_preinstaller
  
  wixobj_flags += -loc $(WIX_ROOT)/WixUI_en-us.wxl $(WIX_ROOT)/wixui.wixlib $(WIX_ROOT)/sca.wixlib
  
  WIXOBJ_Files {
    BMW.wixobj << BMW.wxs
  }
}
