<cruisecontrol>

  <!--
    Component Workload Emulator (CoWorkEr) Utilization Test
    Suite (CUTS) for Visual C++ 8 - Nightly Build
    -->
  <project name="CUTS Nightly Build (vc8)"
           requiremodification="no">
    <listeners>
      <currentbuildstatuslistener file="logs/${project.name}/status.txt"/>
    </listeners>

    <bootstrappers>
      <svnbootstrapper localworkingcopy="${project.CUTS_ROOT}" />
    </bootstrappers>

    <modificationset quietperiod="30">
      <svn repositorylocation="https://svn.dre.vanderbilt.edu/CoSMIC/trunk/CoSMIC/CUTS"/>
    </modificationset>

    <schedule>
      <ant antscript="${project.CUTS_ROOT}/integration/vc8.bat"
           antworkingdir="${project.CUTS_ROOT}"
           buildfile="integration/autobuild.build"
           usedebug="false"
           uselogger="true"
           time="0200" />
    </schedule>

    <log>
      <merge dir="projects/${project.name}/target/test-results"/>
    </log>
  </project>

  <!--
    Component Workload Emulator (CoWorkEr) Utilization Test
    Suite (CUTS) for Visual C++ 8 - Hourly Build
    -->
  <project name="CUTS Hourly Build (vc8)"
           requiremodification="yes">
    <listeners>
      <currentbuildstatuslistener file="logs/${project.name}/status.txt"/>
    </listeners>

    <bootstrappers>
      <svnbootstrapper localworkingcopy="${project.CUTS_ROOT}" />
    </bootstrappers>

    <modificationset quietperiod="30">
      <svn repositorylocation="https://svn.dre.vanderbilt.edu/CoSMIC/trunk/CoSMIC/CUTS"/>
    </modificationset>

    <schedule interval="3600">
      <ant antscript="${project.CUTS_ROOT}/integration/vc8.bat"
           antworkingdir="${project.CUTS_ROOT}"
           buildfile="integration/autobuild.build"
           usedebug="false"
           uselogger="true" />

      <pause starttime="0150" endtime="0250" />
    </schedule>

    <log>
      <merge dir="projects/${project.name}/target/test-results"/>
    </log>
  </project>

</cruisecontrol>
