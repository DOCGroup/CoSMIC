///=============================================================================
/// @file         CUTS_CoSMIC.mwc
///
/// @author       James H. Hill
///
/// @brief        This workspace builds only the modeling portion
///               of CUTS.
///=============================================================================

workspace (CUTS_CoSMIC) {
  cmdline += -feature_file default.features

  exclude (!vc71, !vc8) {
    cmdline += -include $COSMIC_ROOT \
               -include $CUTS_ROOT/etc/config

    // -- CUTS projects
    cuts/be
    cuts/GME

    cosmic {
      // CoSMIC related projects. This will determine if the following
      // project are built in CUTS or CoSMIC. If you want to build the
      // following projects in CUTS, the set -feature cosmic=1.

      cmdline += -base requires_cosmic

      $(COSMIC_ROOT)/Utils
      $(COSMIC_ROOT)/PIM/PICML/interpreters/PICML
    }

    static {
      // We are going to force the following projects to be built
      // as static libraries instead of shared objects.

      cmdline += -static

      $(CIAO_ROOT)/CCF/CCF/CodeGenerationKit
    }
  }
}
