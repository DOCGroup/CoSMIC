/// $Id$

workspace (GAME) {
  cmdline += -include $GAME_ROOT/MPC/config

  exclude (!prop:windows) {
    cmdline += -include $GAME_ROOT/contrib/CCF/CCF/MPC/config \
               -base game_ccf_root

    game

    exclude (!prop:microsoft, wix) {
      cmdline += -static

      $(GAME_ROOT)/contrib/CCF/CCF/CCF/CodeGenerationKit
    }
  }
  else {
    game/xml
    game/xme
  }
}
